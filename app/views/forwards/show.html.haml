.page-header
  %h1 #{@forward.email} &rarr; #{@forward.destination}

.well
  %ul
    %li #{Forward.human_attribute_name(:created_at)}: #{l @forward.created_at}.
    %li #{Forward.human_attribute_name(:updated_at)}: #{l @forward.updated_at}.
  .pull-right= link_to t('.destroy', :default => t("helpers.links.destroy")), domain_forward_path(@domain, @forward), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to 'Edit', edit_domain_forward_path(@domain, @forward), :class => 'btn'

- if @forward.user
  .well Matching user: #{link_to @forward.user.email, domain_user_path(@domain, @forward.user)}
