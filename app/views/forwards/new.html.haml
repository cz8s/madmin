%h1 New forward

= form_for(@forward) do |f|
  = render :partial => 'shared/form_errors', :locals => { :obj => @forward }
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :domain
    = f.collection_select :domain_id, Domain.all, :id, :name
  .field
    = f.label :destination
    = f.text_field :destination
  .actions
    = f.submit
= link_to 'Back', forwards_path
